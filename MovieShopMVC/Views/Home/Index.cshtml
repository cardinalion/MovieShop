@model IEnumerable<ApplicationCore.Models.MovieCardResponseModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-xl-2 col-lg-3 col-sm-4 col-6">
            <partial model="movie" name="_MovieCard" />
            </div>
        }
    </div>
</div>